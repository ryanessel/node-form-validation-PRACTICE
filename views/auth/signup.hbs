{{!-- views/auth/signup.hbs --}}
 
<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">
 
    <label> Username
      <input type="text" name="username" placeholder="ironhacker" />
    </label>

    <label> Email   {{!--  type is orignally email --}}
      <input type="text" name="email" placeholder="rockstar@ironhack.com" />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" />
    </label>
 
    <button type="submit">Create account</button>
 
    {{!-- error message will be added here --}}

      {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}

  </form>

</div>


  